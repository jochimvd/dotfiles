#!/bin/sh

# Power menu script using tofi

CHOSEN=$(printf "Lock\nSuspend\nReboot\nShutdown\nLog Out" | rofi -dmenu -theme "$XDG_CONFIG_HOME/rofi/config.rasi")

case "$CHOSEN" in
	"Lock") lockscreen ;;
	"Suspend") systemctl suspend ;;
	"Reboot") reboot ;;
	"Shutdown") poweroff ;;
	"Log Out") hyprctl dispatch exit ;;
	*) exit 1 ;;
esac
#!/bin/sh

# Power menu script using walker

CHOSEN=$(printf "Lock\nSuspend\nReboot\nShutdown\nLog Out" | walker --dmenu -p "System..." --theme my_theme --width 300 --minheight 200)

case "$CHOSEN" in
    "Lock") dot-cmd-lockscreen ;;
    "Suspend") systemctl suspend ;;
    "Reboot") dot-hyprland-window-close-all; sleep 0.5; systemctl reboot --no-wall ;;
    "Shutdown") dot-hyprland-window-close-all; sleep 0.5; systemctl poweroff --no-wall ;;
    "Log Out") uwsm stop ;;
    *) exit 1 ;;
esac
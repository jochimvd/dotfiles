#!/usr/bin/env bash

pkill hyprshot || hyprshot -m ${1:-region} --freeze --raw |
    satty --filename - \
        --early-exit \
        --save-after-copy \
        --actions-on-enter save-to-clipboard \
        --copy-command wl-copy \
        --annotation-size-factor 0.4 \
        --output-filename $XDG_SCREENSHOTS_DIR/screenshot_$(date '+%Y-%m-%d_%H%M%S').png